{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": false,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build/"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "compileOnSave": true
}
